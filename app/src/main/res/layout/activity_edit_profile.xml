<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etFullName" android:hint="Full Name"/>
        <EditText android:id="@+id/etDob" android:hint="Date of Birth"/>
        <EditText android:id="@+id/etAddress" android:hint="Address"/>
        <EditText android:id="@+id/etPhone" android:hint="Phone Number"/>
        <EditText android:id="@+id/etUsername" android:hint="Username"/>
        <EditText android:id="@+id/etPassword" android:hint="New Password (Leave blank to keep current)" android:inputType="textPassword"/>

        <Button android:id="@+id/btnSaveChanges" android:text="Save Changes"/>
        <Button android:id="@+id/btnDeleteProfile" android:text="Delete Profile"/>
    </LinearLayout>
</ScrollView>